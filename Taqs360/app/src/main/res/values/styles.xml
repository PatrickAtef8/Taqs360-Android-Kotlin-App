<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/black_87</item>
        <item name="colorAccent">@color/black_87</item>
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:textColorSecondary">@color/black_54</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black_87</item>
        <item name="colorPrimaryVariant">@color/black_54</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/black_87</item>
    </style>


</resources>